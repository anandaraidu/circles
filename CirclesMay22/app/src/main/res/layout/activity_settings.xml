<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#404040"
    android:textColor="#FFFFFF"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:textColor="#FFFFFF"
        android:textAllCaps="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#404040"
        tools:context="com.example.muralic.circlesmay22.Settings">

        <!-- Personal Details -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/Settings_Person"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="#FFFF00"
                android:text="Personal Details"
                android:paddingBottom="@dimen/settings_padding_bottom_text"/>

            <LinearLayout
                android:id="@+id/Settings_Person_Details"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="fill_parent"
                        android:textColor="#FFFFFF"
                        android:layout_weight="4"
                        android:layout_width="fill_parent"
                        android:text="FullName"/>
                    <EditText
                        android:id="@+id/Settings_Person_FullName"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:inputType="textPersonName"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:orientation="horizontal"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:textColor="#FFFFFF"
                        android:layout_height="fill_parent"
                        android:layout_weight="4"
                        android:text="Skills"/>
                    <EditText
                        android:id="@+id/Settings_Person_Skills"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="4"
                        android:textColor="#FFFFFF"
                        android:text="Interests"/>
                    <EditText
                        android:id="@+id/Settings_Person_Intrests"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- End Personal Details -->

        <!-- Current Address Details -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:textColor="#FFFFFF"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/Settings_CurrentAddress"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:textColor="#FFFF00"
                android:text="Current Address"
                android:paddingBottom="@dimen/settings_padding_bottom_text"/>

            <LinearLayout
                android:id="@+id/Settings_CurrentAddress_Details"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="4"
                        android:textColor="#FFFFFF"
                        android:text="HouseNo"/>
                    <EditText
                        android:id="@+id/Settings_CurrentAddress_HouseNo"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:inputType="textPostalAddress"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textColor="#FFFFFF"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="4"
                        android:textColor="#FFFFFF"
                        android:layout_height="fill_parent"
                        android:text="Apt/Street Name"/>
                    <EditText
                        android:id="@+id/Settings_CurrentAddress_AptStreetName"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:inputType="textPostalAddress"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="4"
                        android:textColor="#FFFFFF"
                        android:layout_height="fill_parent"
                        android:text="Area Name"/>
                    <EditText
                        android:id="@+id/Settings_CurrentAddress_AreaName"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:inputType="textPostalAddress"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="4"
                        android:text="City Name"
                        android:textColor="#FFFFFF"
                        android:layout_height="fill_parent" />
                    <EditText
                        android:id="@+id/Settings_CurrentAddress_CityName"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:inputType="textPostalAddress"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="4"
                        android:textColor="#FFFFFF"
                        android:layout_height="fill_parent"
                        android:text="PinCode"/>
                    <EditText
                        android:id="@+id/Settings_CurrentAddress_PinCode"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:inputType="numberDecimal"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- End Current Address -->

        <!-- Start Work Details -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:orientation="vertical"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/Settings_Work_Address"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:textColor="#FFFF00"
                android:text="Career Details"
                android:paddingBottom="@dimen/settings_padding_bottom_text" />

            <LinearLayout
                android:id="@+id/Settings_Work_Address_Details"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="4"
                        android:textColor="#FFFFFF"
                        android:text="Company Name"/>
                    <EditText
                        android:id="@+id/settings_Work_CompanyName"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="4"
                        android:textColor="#FFFFFF"
                        android:text="Building No"/>
                    <EditText
                        android:id="@+id/Settings_Work_HouseNo"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:inputType="textPostalAddress"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="4"
                        android:textColor="#FFFFFF"
                        android:layout_height="fill_parent"
                        android:text="Building/Street Name"/>
                    <EditText
                        android:id="@+id/Settings_Work_AptStreetName"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:inputType="textPostalAddress"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="4"
                        android:textColor="#FFFFFF"
                        android:layout_height="fill_parent"
                        android:text="Area Name"/>
                    <EditText
                        android:id="@+id/Settings_Work_AreaName"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:inputType="textPostalAddress"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="4"
                        android:text="City Name"
                        android:textColor="#FFFFFF"
                        android:layout_height="fill_parent" />
                    <EditText
                        android:id="@+id/Settings_Work_CityName"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:inputType="textPostalAddress"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="4"
                        android:textColor="#FFFFFF"
                        android:layout_height="fill_parent"
                        android:text="PinCode"/>
                    <EditText
                        android:id="@+id/Settings_Work_PinCode"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:textColor="#FFFFFF"
                        android:singleLine="true"
                        android:inputType="numberDecimal"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- End Work Address Details -->

        <!-- Education Details -->
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Settings_Education"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:textColor="#FFFF00"
                android:text="Education Details"
                android:paddingBottom="@dimen/settings_padding_bottom_text"/>

            <LinearLayout
                android:id="@+id/Settings_Education_Details"
                android:layout_weight="1"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/Settings_Education_School"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textColor="#FFFF00"
                    android:paddingBottom="@dimen/settings_padding_bottom_text"
                    android:text="School"/>

                <LinearLayout
                    android:id="@+id/Settings_Education_School_Details"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:textColor="#FFFFFF"
                    android:orientation="vertical"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_height="fill_parent"
                            android:layout_weight="4"
                            android:textColor="#FFFFFF"
                            android:layout_width="fill_parent"
                            android:text="School Name"/>
                        <EditText
                            android:id="@+id/Settings_Education_SchoolName"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:inputType="textPersonName"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="fill_parent">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="4"
                            android:textColor="#FFFFFF"
                            android:text="HouseNo"/>
                        <EditText
                            android:id="@+id/Settings_Education_School_HouseNo"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:inputType="textPostalAddress"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_weight="4"
                            android:textColor="#FFFFFF"
                            android:layout_height="fill_parent"
                            android:text="Apt/Street Name"/>
                        <EditText
                            android:id="@+id/Settings_Education_School_AptStreetName"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:inputType="textPostalAddress"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_weight="4"
                            android:textColor="#FFFFFF"
                            android:layout_height="fill_parent"
                            android:text="Area"/>
                        <EditText
                            android:id="@+id/Settings_Education_School_AreaName"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:inputType="textPostalAddress"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_weight="4"
                            android:text="City"
                            android:textColor="#FFFFFF"
                            android:layout_height="fill_parent" />
                        <EditText
                            android:id="@+id/Settings_Education_School_CityName"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:inputType="textPostalAddress"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_weight="4"
                            android:textColor="#FFFFFF"
                            android:layout_height="fill_parent"
                            android:text="PinCode"/>
                        <EditText
                            android:id="@+id/Settings_Education_School_PinCode"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:inputType="numberDecimal"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/Settings_Education_College"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:textColor="#FFFF00"
                    android:paddingBottom="@dimen/settings_padding_bottom_text"
                    android:text="Graduation"/>

                <LinearLayout
                    android:id="@+id/Settings_Education_College_Details"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:textColor="#FFFFFF"
                    android:orientation="vertical"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:textColor="#FFFFFF"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_height="fill_parent"
                            android:layout_weight="4"
                            android:textColor="#FFFFFF"
                            android:layout_width="fill_parent"
                            android:text="College Name"/>
                        <EditText
                            android:id="@+id/Settings_Education_SchoolName"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:inputType="textPersonName"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="fill_parent">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="4"
                            android:textColor="#FFFFFF"
                            android:text="HouseNo"/>
                        <EditText
                            android:id="@+id/Settings_Education_College_HouseNo"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:inputType="textPostalAddress"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_weight="4"
                            android:textColor="#FFFFFF"
                            android:layout_height="fill_parent"
                            android:text="Apt/Street Name"/>
                        <EditText
                            android:id="@+id/Settings_Education_College_AptStreetName"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:inputType="textPostalAddress"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_weight="4"
                            android:textColor="#FFFFFF"
                            android:layout_height="fill_parent"
                            android:text="Area"/>
                        <EditText
                            android:id="@+id/Settings_Education_College_AreaName"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:inputType="textPostalAddress"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_weight="4"
                            android:text="City"
                            android:textColor="#FFFFFF"
                            android:layout_height="fill_parent" />
                        <EditText
                            android:id="@+id/Settings_Education_College_CityName"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:inputType="textPostalAddress"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_weight="4"
                            android:textColor="#FFFFFF"
                            android:layout_height="fill_parent"
                            android:text="PinCode"/>
                        <EditText
                            android:id="@+id/Settings_Education_College_PinCode"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:singleLine="true"
                            android:inputType="numberDecimal"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- Education Details End -->
        <!-- Button for saving the settings -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnSettingsSave"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/settings_padding_left_text"
                android:paddingTop="@dimen/settings_padding_bottom_text"
                android:background="@drawable/rounded_button"
                android:text="Save"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>